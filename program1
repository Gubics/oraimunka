import os
import random

def efeladat(b):
    seged=[]
    for j in range(0,3,1):
        if(b[0][j]%2!=0 and b[0][j]%5==0):
            seged.append(b[0][j])
    if(len(seged)==0):
        return "Nincs a feltételnek megfelelő bér érték"
    else:
        return seged
            

os.system("cls")
#1. megoldás(kiindulás: 0 értékekkel feltöltött lista)
